<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>D-MAT Admin Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1>Admin Dashboard</h1>
    
    <h3>Add New Student</h3>
    <form action="/admin/add-student" method="POST">
        <input type="text" name="name" placeholder="Student Name" required>
        <input type="text" name="roll_number" placeholder="Roll Number" required>
        <input type="text" name="room_number" placeholder="Room Number">
        <input type="number" name="mess_fee" placeholder="Initial Mess Fee">
        <button type="submit">Add Student</button>
    </form>

    <hr>

    <h3>Student List</h3>
    <table border="1">
        <thead>
            <tr>
                <th>Roll No</th>
                <th>Name</th>
                <th>Room</th>
                <th>Bill</th>
                <th>Fines</th>
            </tr>
        </thead>
        <tbody>
            <% students.forEach(student => { %>
                <tr>
                    <td><%= student.roll_number %></td>
                    <td><%= student.name %></td>
                    <td><%= student.room_number %></td>
                    <td>₹<%= student.mess_fee %></td>
                    <td>₹<%= student.fines %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>